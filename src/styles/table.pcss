/* tc- project's prefix*/

.tc-table {
  position: relative;
  width: 100%;
  height: 100%;
  display: grid;
  border-top: 1px solid #e8e8eb;

  &__wrap {
    /*border: 1px solid #DBDBE2;*/
    border-left: 0px;
    position: relative;
    height: 100%;
    width: 100%;
    box-sizing: border-box;
    display: grid;
    grid-template-columns: calc(100% - 2.6em) 2.6em;
  }

  &:after {
    position: absolute;
    content: "";
    width: 30px;
    height: 100%;
    left: -30px;
    top: 0;
  }

  &:before {
    position: absolute;
    content: "";
    width: 100%;
    height: 30px;
    top: -30px;
    left: 0;
  }
}

.tc-table--heading .tc-row:first-child {
  border-bottom: 2px solid #e8e8eb;

  &:after {
    bottom: -2px;
    border-bottom: 2px solid #e8e8eb;
  }
}

.tc-add-column {
  display: flex;
  padding: 0.8em 0;
  justify-content: center;
  border-top: 1px solid #e8e8eb;
}

.tc-add-row {
  height: 2.6em;
  display: flex;
  align-items: center;
  padding-left: 0.6em;
}

.tc-add-column, .tc-add-row {
  transition: 0.1s;
  cursor: pointer;

  &:hover {
    background: #f9f9fb;
  }
}

.tc-row {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(10px, 1fr));
  position: relative;
  border-bottom: 1px solid #e8e8eb;

  &:after {
    content: '';
    pointer-events: none;
    position: absolute;
    width: 2.6rem;
    height: 100%;
    bottom: -1px;
    right: -2.6rem;
    border-bottom: 1px solid #e8e8eb;
  }

  &--selected {
    background: #f9f9fb;
  }
}

.tc-row--selected {
  &:after {
    background: #f9f9fb;
  }
}

.tc-column {
  height: 2rem;
  border-right: 1px solid #e8e8eb;
  clear: both;
  padding: 0.3em;
  overflow: hidden;
  outline: none;

  &--selected {
    background: #f9f9fb;
  }
}